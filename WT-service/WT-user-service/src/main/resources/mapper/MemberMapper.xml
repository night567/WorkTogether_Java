<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.szu.user.mapper.MemberMapper">

    <resultMap id="BaseResultMap" type="cn.edu.szu.user.pojo.User">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="salt" column="salt" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="INTEGER"/>
        <result property="avatar" column="avatar" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="BOOLEAN"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,salt,email,name,phone,sex,avatar,status
    </sql>

    <!--根据用户ID查询用户列表-->
    <select id="selectUserByUserIds"  parameterType="java.util.List">
        select user_id
        from wt_user
        where user_id in
        <foreach item="id" collection="user_ids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

</mapper>

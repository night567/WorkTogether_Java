<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.szu.teamwork.mapper.ReportMapper">

    <resultMap id="BaseResultMap" type="cn.edu.szu.teamwork.pojo.domain.Report">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="reviewerId" column="reviewer_id" jdbcType="BIGINT"/>
        <result property="year" column="year" jdbcType="INTEGER"/>
        <result property="weekNum" column="week_num" jdbcType="INTEGER"/>
        <result property="text1" column="text1" jdbcType="VARCHAR"/>
        <result property="text2" column="text2" jdbcType="VARCHAR"/>
        <result property="text3" column="text3" jdbcType="VARCHAR"/>
        <result property="text4" column="text4" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="reportTime" column="report_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,reviewer_id,
        year,week_num,text1,
        text2,text3,text4,
        status,report_time
    </sql>
    <select id="getReportByConditions" resultType="cn.edu.szu.teamwork.pojo.domain.Report">
        SELECT *
        FROM wt_report
        WHERE 1=1
        <if test="status != null">
            AND status = #{status}
        </if>
        <if test="weekNum != null">
            AND week_num = #{weekNum}
        </if>
        <if test="uid != null and uid.size() > 0">
            AND user_id IN
            <foreach item="item" index="index" collection="uid" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
    </select>

</mapper>
